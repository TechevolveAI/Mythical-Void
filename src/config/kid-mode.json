{
  "fontScale": 1.2,
  "paddingScale": 1.3,
  "hitboxMin": 64,
  "emojiFallbacks": true,
  "animationDuration": 100,
  "buttonRadius": 16,
  "glowIntensity": 0.3,
  "colors": {
    "primary": "hsl(45,90%,64%)",
    "secondary": "hsl(180,60%,68%)",
    "background": "hsl(265,55%,78%)",
    "text": "hsl(240,25%,24%)",
    "success": "hsl(120,65%,70%)",
    "warning": "hsl(30,85%,68%)",
    "danger": "hsl(0,75%,72%)"
  },
  "accessibility": {
    "highContrast": false,
    "textToSpeech": true,
    "hapticFeedback": true,
    "minimumContrast": 4.5,
    "screenReader": {
      "announceEmotions": true,
      "announceActions": true,
      "contextualHelp": true
    }
  },
  "audio": {
    "buttonPressVolume": 0.3,
    "successVolume": 0.5,
    "enableAudio": true,
    "spatialAudio": false
  },
  "responsive": {
    "mobileBreakpoint": 768,
    "ctaPosition": "bottom",
    "statusBarPosition": "top",
    "landscapeOptimizations": true
  },
  "theme": {
    "name": "spaceMythic",
    "glassmorphism": {
      "enabled": true,
      "backgroundAlpha": 0.15,
      "borderAlpha": 0.8,
      "blurRadius": 10
    },
    "particles": {
      "enableBackground": true,
      "density": "low",
      "interactiveParticles": false
    }
  },
  "emotions": {
    "actionMappings": {
      "hungry": {
        "primaryAction": "feed",
        "secondaryActions": ["pet", "play"],
        "helpText": "Your cosmic friend needs stardust nutrients!"
      },
      "sleepy": {
        "primaryAction": "rest",
        "secondaryActions": ["pet", "clean"],
        "helpText": "Time for a peaceful nebula nap!"
      },
      "bored": {
        "primaryAction": "play",
        "secondaryActions": ["feed", "photo"],
        "helpText": "Let's explore the crystal gardens together!"
      },
      "excited": {
        "primaryAction": "photo",
        "secondaryActions": ["play", "pet"],
        "helpText": "Capture this magical space moment!"
      },
      "dirty": {
        "primaryAction": "clean",
        "secondaryActions": ["feed", "rest"],
        "helpText": "Aurora shower time for your friend!"
      },
      "default": {
        "primaryAction": "pet",
        "secondaryActions": ["feed", "play"],
        "helpText": "Give your stellar companion some love!"
      }
    },
    "transitionEffects": {
      "enabled": true,
      "duration": 300,
      "easing": "Power2.easeOut"
    }
  },
  "feedback": {
    "visual": {
      "particleEffects": true,
      "screenShake": false,
      "colorPulse": true
    },
    "haptic": {
      "lightTap": 50,
      "mediumTap": 100,
      "strongTap": 200
    },
    "audio": {
      "confirmationSounds": true,
      "ambientSounds": true,
      "errorSounds": false
    }
  },
  "safety": {
    "sessionTimeout": 1800000,
    "maxClickRate": 10,
    "contentFiltering": true,
    "parentalControls": {
      "timeRestrictions": false,
      "activityLogging": false
    }
  },
  "interactions": {
    "doubleTapDelay": 300,
    "longPressDelay": 800,
    "swipeThreshold": 50
  }
}